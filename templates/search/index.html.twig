{% extends 'layouts/contact.html.twig'%}

{% block title %}Recherche
{% endblock %}
{% block stylesheets %}
	{{parent()}}
	<style></style>
{% endblock %}
{% block page_content %}
	{{parent()}}
	<div class="row pb-5">
		<div class="col-sm-9 mt-3 pr-5 text-justify">
			<h2>Faire une recherche</h2>
			<div class="form-group">
				{% form_theme searchForm 'bootstrap_4_layout.html.twig' %}
				{{ form_start(searchForm) }}
				{{ form_row(searchForm.name, {'label': 'La recherche s\'effectue sur le titre de l\'article', 'id': 'search-titre', 'attr': {'placeholder': 'Entrez un mot clé', 'class': 'form-control'}})
																																												      }}
				<button class="btn btn-info">Rechercher</button>
				{{ form_end(searchForm) }}
			</div>

			{% if app.request.method == 'POST' %}
				<div id="result-search" class="mt-5">
					{% if companyContacts | length == 0 %}
						<h4>Aucun résulat pour votre recherche
							<i class="fas fa-sad-tear"></i>
						</h4>
					{% else %}
						<h3 class="mt-3">Résulats de votre recherche :</h3>

						{% for companyContact in companyContacts %}
							<div class="mt-3 py-3 px-3">
								<a href="{{ path('app_contact') }}">
									<h4 class="font-weight-bold text-dark">{{ companyContact.name }}</h4>
								</a>

							</div>
						{% endfor %}

					{% endif %}
				</div>
			{% endif %}
		</div>


	</div>

{% endblock %}
