{% block page_content %}
	{{parent()}}

	<div class="container-fluid">
		<div class="item col-sm-10 col-sm-offset-1">
			<div class="form_individual">
				{{ form_start(form_individual) }}
				<h3>Ajouter un contact particulier</h3><br>
				{% for message in app.flashes('error')%}
					<div class="alert alert-danger">
						{{ message }}
					</div>
				{% endfor %}

				<div class="form-row row">

					<div class="form-group col">
						<label for="inputNom">Nom</label><br>
						{{ form_widget(form_individual.last_name, {'attr': {'class': 'form-control'}}) }}
					</div>
					<div class="form-group col">
						<label for="last_name">Prenom
						</label><br>
						{{ form_widget(form_individual.first_name, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>
				<div class="form-row row">
					<div class="form-group col">
						<label for="inputEmail4">Email</label><br>
						{{ form_widget(form_individual.email, {'attr': {'class': 'form-control'}}) }}
					</div>
					<div class="form-group col">
						<label for="inputphone4">Téléphone
						</label><br>
						{{ form_widget(form_individual.phone_number, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>
				<div class="form-group">
					<label for="inputPost">Poste</label><br>
					{{ form_widget(form_individual.role, {'attr': {'class': 'form-control'}}) }}
				</div>
